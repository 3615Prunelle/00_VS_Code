				"echo": true,
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": {
				"owner": "c",
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": {			//Personnalise l'affichage des erreurs avec une regex qui capture les erreurs et avertissements
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
